@model Olímpicos.Models.Atletas
@{
    ViewBag.Title = "Edição de Atletas";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
        }

        .form-container {
            width: 500px;
            margin: 50px auto;
            background: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        label {
            display: block;
            margin-top: 10px;
            color: #444;
        }

        input[type="text"],
        input[type="number"],
        input[type="date"],
        select {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        button {
            margin-top: 20px;
            width: 100%;
            padding: 12px;
            background-color: #4CAF50;
            color: white;
            font-weight: bold;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            button:hover {
                background-color: #45a049;
            }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>Editar Atletas</h2>

        <!-- Form para selecionar atleta -->
        <form asp-action="Buscar" method="post">
            <label>Atleta</label>
            <select asp-for="CodAtleta"
                    asp-items="@(new SelectList(ViewBag.Atletas, "CodAtleta", "NomeAtleta"))"
                    required onchange="this.form.submit()">
                <option value="">Selecione o Atleta</option>
            </select>
        </form>

        <!-- Form para edição, sempre visível, desabilitado se Model for null -->
        <form asp-action="Editar" method="post">
            <fieldset @(Model == null ? "disabled" : "")>
                <input type="hidden" asp-for="CodAtleta" />

                <label>Nome Atleta:</label>
                <input asp-for="NomeAtleta" type="text" required />

                <label>Data de Nascimento:</label>
                <input asp-for="DataNascimento" type="text" placeholder="DD/MM/AAAA" required />

                <label>Sexo:</label>
                <input asp-for="Sexo" type="text" maxlength="1" required />

                <label>Altura:</label>
                <input asp-for="Altura" type="text" required />

                <label>Peso:</label>
                <input asp-for="Peso" type="text" required />

                <label>Cidade:</label>
                <select asp-for="CodCidade"
                        asp-items="@(new SelectList(ViewBag.Cidade, "CodCidade", "NomeCidade"))"
                        required>
                    <option value="">Selecione a Cidade</option>
                </select>

                <button type="submit">Editar</button>
            </fieldset>
        </form>
    </div>
</body>
</html>
